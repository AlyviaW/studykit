{
  "manifest_version": 3,
  "name": "Chrome AI StudyKit",
  "version": "0.1.0",
  "description": "把任意网页/文本转为摘要、互动测验与闪卡，并保存为可复习资产。",
  "permissions": ["activeTab", "storage", "scripting", "downloads", "tabs", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "AI StudyKit",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/service_worker.js",
    "type": "module"
  },
  "icons": {
    "128": "assets/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
